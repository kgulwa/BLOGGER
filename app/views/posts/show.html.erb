<h1><%= @post.title %></h1>
<p>by <%= @post.user.email %></p>
<p><%= @post.body %></p>

<% if user_signed_in? && @post.user == current_user %>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>

<%= link_to "Back to all posts", posts_path %>
