<h1>All Posts</h1>

<% if @posts.any? %>
  <ul>
    <% @posts.each do |post| %>
      <li>
        <h2><%= link_to post.title, post_path(post) %></h2>
        <p>by <%= post.user.email %></p>
        <p><%= truncate(post.body, length: 100) %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No posts yet. <%= link_to "Create one", new_post_path %></p>
<% end %>

